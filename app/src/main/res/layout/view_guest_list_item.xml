<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/guestListItemPhoto"
        android:layout_width="@dimen/guest_photo_size"
        android:layout_height="@dimen/guest_photo_size"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/guestListItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textColor="@color/textPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/guestListItemPhoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guestListItemPhoto"
        app:layout_constraintTop_toTopOf="@+id/guestListItemPhoto" />

</androidx.constraintlayout.widget.ConstraintLayout>